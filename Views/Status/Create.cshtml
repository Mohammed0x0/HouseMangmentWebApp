@model HouseMangment.Entity.Status

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Status</h4>
    <hr />

    <div>
        <a href="@Url.Action("index")"><button type="button" class="btn btn-outline-info">back</button></a>

    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
       Device Name
        <div class="col-md-10">
            @Html.DropDownList("Device_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Device_id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
       User Name
        <div class="col-md-10">
            @Html.DropDownList("User_id", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.User_id, "", new { @class = "text-danger" })
        </div>
    </div>

    


    <br>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Assign</button>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
